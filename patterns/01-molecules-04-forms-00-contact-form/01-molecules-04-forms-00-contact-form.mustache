&lt;div class=&quot;entry&quot;&gt;
    &lt;form name=&quot;feedback&quot; method=&quot;post&quot; action=&quot;&quot;&gt;
        &lt;fieldset&gt;
            &lt;legend&gt;Contact Travi&lt;/legend&gt;
            &lt;ul class=&quot;fieldList&quot;&gt;
                &lt;li&gt;{{&gt; atoms-text-input }}&lt;/li&gt;
                &lt;li&gt;{{&gt; atoms-email-input }}&lt;/li&gt;
                &lt;li&gt;{{&gt; atoms-select-menu }}&lt;/li&gt;
                &lt;li&gt;
                    &lt;label for=&quot;topic&quot;&gt;Topic&lt;/label&gt;
                    &lt;select name=&quot;topic&quot; id=&quot;topic&quot; class=&quot;textInput&quot;&gt;
                        &lt;option value=&quot;&quot;&gt;Select One&lt;/option&gt;
                        &lt;option value=&quot;Question&quot;&gt;Question&lt;/option&gt;
                        &lt;option value=&quot;Comment&quot;&gt;Comment&lt;/option&gt;
                        &lt;option value=&quot;Site Suggestion&quot;&gt;Site Suggestion&lt;/option&gt;
                        &lt;option value=&quot;Report a Bug&quot;&gt;Report a Bug&lt;/option&gt;
                        &lt;option value=&quot;Propose a Solution to a Problem&quot;&gt;Propose a Solution to a Problem&lt;/option&gt;
                    &lt;/select&gt;
                &lt;/li&gt;
                &lt;li&gt;{{&gt; atoms-radio-buttons }}&lt;/li&gt;
                &lt;li&gt;
                    &lt;fieldset&gt;
                        &lt;legend&gt;Request a Reply?&lt;/legend&gt;
                        &lt;ol class=&quot;choices&quot;&gt;
                            &lt;li&gt;
                                &lt;label&gt;
                                    &lt;input type=&quot;radio&quot; name=&quot;reply&quot; value=&quot;pleaseReply&quot; class=&quot;radioButton&quot;&gt;
                                    Yes
                                &lt;/label&gt;
                            &lt;/li&gt;
                            &lt;li&gt;
                                &lt;label&gt;
                                    &lt;input type=&quot;radio&quot; name=&quot;reply&quot; value=&quot;noReply&quot; class=&quot;radioButton&quot;&gt;
                                    No
                                &lt;/label&gt;
                            &lt;/li&gt;
                        &lt;/ol&gt;
                    &lt;/fieldset&gt;
                &lt;/li&gt;
                &lt;li&gt;{{&gt; atoms-text-area }}&lt;/li&gt;
            &lt;/ul&gt;
        &lt;/fieldset&gt;
        &lt;ol class=&quot;actions&quot;&gt;
            &lt;li&gt;{{&gt; atoms-submit-button }}&lt;/li&gt;
        &lt;/ol&gt;
    &lt;/form&gt;
&lt;/div&gt;
